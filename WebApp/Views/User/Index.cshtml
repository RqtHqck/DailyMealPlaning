@model WebApp.Models.User

@{
ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Заполните информацию о себе</h2>

    <form asp-action="Index" method="post" class="p-4 shadow rounded bg-light">
        <div class="form-group mb-3">
            <label asp-for="Weight" class="fw-bold">Вес (кг):</label>
            <input asp-for="Weight" class="form-control" placeholder="Введите ваш вес" />
            <span asp-validation-for="Weight" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Height" class="fw-bold">Рост (см):</label>
            <input asp-for="Height" class="form-control" placeholder="Введите ваш рост" />
            <span asp-validation-for="Height" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Age" class="fw-bold">Возраст:</label>
            <input asp-for="Age" class="form-control" placeholder="Введите ваш возраст" />
            <span asp-validation-for="Age" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ActivityLevel" class="fw-bold">Уровень активности:</label>
            <select asp-for="ActivityLevel" class="form-select" asp-items="Html.GetEnumSelectList<WebApp.Models.ActivityLevel>()">
                <option selected disabled>Выберите уровень активности</option>
            </select>
            <span asp-validation-for="ActivityLevel" class="text-danger small"></span>
        </div>

        <div class="text-center">
            <h4 class="mt-3 fw-bold">Рекомендуемое потребление калорий:</h4>
            <p class="fs-4 text-success">@Model.Calories ккал</p>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">Сохранить</button>
        </div>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
